<h1>Sign Up</h1>
<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :email_address %><br/>
      <%= f.text_field :email_address %>
    </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password_digest %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>
